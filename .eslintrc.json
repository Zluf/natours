{
  // Base configurations to extend
  "extends": [
    "airbnb", // Airbnb's base JS style guide
    "prettier", // Disables rules that conflict with Prettier
    "plugin:node/recommended" // Node.js-specific linting rules
  ],
  "plugins": ["prettier"], // Enables Prettier plugin for linting
  "rules": {
    "prettier/prettier": "error", // Treat Prettier formatting issues as errors
    "spaced-comment": "off", // Allow non-spaced comments
    "no-console": "off", // Allow console.log and other console methods
    "consistent-return": "off", // Allow inconsistent return statements in functions
    "func-names": "off", // Allow unnamed function expressions
    "object-shorthand": "off", // Do not enforce ES6 object shorthand
    "no-process-exit": "off", // Allow use of process.exit()
    "no-param-reassign": "off", // Allow modifying function parameters
    "no-return-await": "off", // Allow using return await (even if redundant)
    "no-underscore-dangle": "off", // Allow identifiers with a leading/trailing underscore
    "class-methods-use-this": "off", // Allow class methods that don't use 'this'
    "prefer-destructuring": ["error", { "object": true, "array": false }], // Enforce object destructuring, not array
    "no-unused-vars": ["off", { "argsIgnorePattern": "req|res|next|val" }], // Ignore unused vars if name matches these (temp off)
    "no-shadow": "off",
    "prefer-object-spread": "off",
    "no-undef": "error",
    "prefer-const": "off",
    "import/no-extraneous-dependencies": "off",
    "arrow-body-style": "off"
  }
}
